@using MusicOrganizer.Models;

@{
  Layout = "_Layout";
}

<div class="page-header">
  <h1>A List of Your Albums</h1>
</div>

@if (@Model.Count > 0)
{
  <div class="album-list">
    <ul>
      @foreach(Album album in Model)
      {
        <li><a href="/albums/@album.Id">@album.AlbumName</a></li>
      }
    </ul>
  </div>
}
else
{
  <p>You haven't added any albums yet</p>
}