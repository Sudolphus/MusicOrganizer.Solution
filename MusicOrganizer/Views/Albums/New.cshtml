@{
  Layout = "_Layout";
}


<div class="page-header">
  <h1>Add An Album To Your Collection</h1>
</div>

<form action="/albums" method="post">
  <div class="form-group">
    <label for="albumName">Name of Album: </label>
    <input id="albumName" name="albumName" type="text" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="artistName">Name of Artist: </label>
    <input id="artistName" name="artistName" type="text" class="form-control" required>
  </div>
  <button class="btn btn-success" type="submit">Add Album</button>
</form>