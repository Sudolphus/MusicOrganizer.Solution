@using MusicOrganizer.Models;

@{
  Layout = "_Layout";
}

<div class="container-fluid">
  <div class="page-header">
    <h1>Artists</h1>
    <p>A List of Artists in Your Collection</p>
  </div>

  @if (@Model.Count > 0)
  {
    <div class="artist-list">
      <ul>
        @foreach(Artist artist in Model)
        {
          <li>artist.ArtistName</li>
        }
      </ul>
    </div>
  }
  else
  {
    <p>You have not yet added any Artists to your collection.</p>
  }

</div>